---
// name=src/components/HeroLeaf.astro
// Hero con capas "paper" y hojas posicionadas
const title = Astro.props.title ?? "Rennale Renuelly";
const lead = Astro.props.lead ?? "Texto descriptivo que introduce el producto, con una frase corta y contundente.";
---
<section class="section hero" style="position:relative; padding:64px 0 40px;">
  <div class="container" style="position:relative; display:grid; grid-template-columns:1fr 1fr; gap:28px; align-items:center;">
    <div>
      <h1 class="display">{title}</h1>
      <p class="lead">{lead}</p>
      <div style="margin-top:20px;">
        <a class="cta-pill" href="#demo">Heses Roge</a>
      </div>
    </div>

    <div style="position:relative; height:420px; min-height:360px;">
      <!-- Capas de 'papel' (puedes duplicar/ajustar) -->
      <div class="paper-layer" style="top:20px; left:-6%; width:110%; height:320px; transform: rotate(-6deg); background: linear-gradient(180deg,#b07a56,#7b5944);"></div>
      <div class="paper-layer" style="top:70px; left:6%; width:92%; height:300px; transform: rotate(2deg); background: linear-gradient(180deg,#2e7a62,#1d5f49);"></div>

      <!-- Hojas: pon los archivos en /public/assets/leaves/leaf-1.png etc -->
      <img src="/assets/leaves/boo.png" alt="" class="leaf" style="right:6%; top:8%; width:220px; transform:rotate(-10deg);" />
      <img src="/assets/leaves/boo2.png" alt="" class="leaf" style="right:2%; top:40%; width:160px; transform:rotate(14deg);" />
      <img src="/assets/leaves/boo3.png" alt="" class="leaf" style="right:20%; top:62%; width:260px; transform:rotate(-6deg);" />

    </div>
  </div>
</section>