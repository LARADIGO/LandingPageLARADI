---
const {icon = '', title = '', text = ''} = Astro.props;
---
<article class="card" style="padding:18px; display:flex; gap:12px; align-items:flex-start;">
  <div style="width:48px;height:48px;border-radius:12px;background:linear-gradient(180deg,rgba(6,182,212,.12),rgba(37,99,235,.06)); display:flex; align-items:center; justify-content:center;">
    <!-- Si tienes un icon SVG pásalo aquí -->
    <span aria-hidden="true" style="font-size:20px; color:var(--primary)">{icon}</span>
  </div>
  <div>
    <h3 style="margin:0 0 6px; color:var(--text)">{title}</h3>
    <p style="margin:0; color:var(--muted); font-size:14px;">{text}</p>
  </div>
</article>